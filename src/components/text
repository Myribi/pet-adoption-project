                <>
                  <Button className="blue_button" variant="" onClick={()=> { changePetStatusFunction("adopted")}}>
                  Adopt
                  </Button>
                  <Button className="blue_button_border " variant="" onClick={()=> { changePetStatusFunction("available")}}>
                   Return Foster Pet
                  </Button>
                </> :
                <>
                <Button className="blue_button" variant="" onClick={()=> { changePetStatusFunction("adopted")}}>
                  Adopt
                  </Button>
                  <Button className="blue_button_border " variant="" onClick={()=> { changePetStatusFunction("fostered")}}>
                   Foster
                  </Button>
                </>
                )
              )}






