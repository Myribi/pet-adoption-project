{!token? (
                <>
                  <p className="pet_profile_information_adopt">
                    For adopt or foster a pet, LogIn
                  </p>
                </>
              ) : (
                currentPet.adoptionStatus === "adopted"?
                (  savedPets.adopted?.find((pet)=> pet._id == currentPet._id)?
                <>
                <Button className="blue_button" variant="" onClick={()=> { changePetStatusFunction("available")}}>
                    Return
                </Button> 
                </>:
                <>  
                <p className="pet_profile_information_adopt">
